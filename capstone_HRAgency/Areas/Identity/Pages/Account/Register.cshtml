@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@* <h1>@ViewData["Title"]</h1> *@

<div class="row">
    @* <div class="col-md-4"> *@
    <div class="container">
        <section class="mx-auto col-md-6 mt-5 " style="text-align: center;">
            <h1 class="mb-5" style="color: #D21F3C ; padding-block: 4rem;">Register New User</h1>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"
                class=" mt-5 d.flex flex-column p-3">
                @* <hr /> *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3  text-start">
                    <input asp-for="Input.Email" class="form-control mb-2" autocomplete="username" aria-required="true"
                        placeholder="Email" style="background-color:#EAF6F4;border: 1px solid #175E52;" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <div class="mb-5">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-floating mb-3  text-start">
                    <input asp-for="Input.Password" class="form-control mb-2" autocomplete="new-password"
                        aria-required="true" placeholder="Password"
                        style="background-color:#EAF6F4;border: 1px solid #175E52;" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <div class="mb-5">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-floating mb-3  text-start">
                    <input asp-for="Input.ConfirmPassword" class="form-control mb-2" autocomplete="new-password"
                        aria-required="true" placeholder="Confirm Password"
                        style="background-color:#EAF6F4;border: 1px solid #175E52;" />
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <div class="mb-5">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex flex-column align-items-center mt-5">
                    <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary rounded-pill"
                        style="padding-inline: 3em ; padding-block: 1rem ;background-color: #175E52;">Register</button>
                    <div class="btn btn-lg btn-primary rounded-pill mt-5"
                        style="padding-inline: 3em ; background-color: black;">
                        <a class="nav-link text-white" href="~/">Home</a>
                    </div>
                    @* <button id="registerSubmit" type="submit" class=" btn btn-lg btn-primary rounded-pill"
                        style="padding-inline: 2rem ; background-color: #175E52;">
                        </button> *@
                    @* <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    *@
                </div>
            </form>
        </section>
    </div>
